<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Root layout for the main activity -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Title TextView -->
        <!-- Displays the title of the app, "My Journal", at the top and centered -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Journal"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" />

        <!-- Empty State Message -->
        <!-- Shown when there are no journal entries -->
        <TextView
            android:id="@+id/textViewEmptyState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You don't have any journal entries yet! Tap the + button to start writing your first journal."
            android:gravity="center"
            android:textSize="18sp"
            android:padding="16dp"
            android:textColor="@color/text_secondary"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- RecyclerView -->
        <!-- Displays the list of journal entries -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewEntries"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/titleTextView"
            app:layout_constraintBottom_toTopOf="@id/fabAddEntry"
            android:layout_margin="16dp" />

        <!-- Floating Action Button -->
        <!-- Used for adding a new journal entry -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAddEntry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/todo"
            app:srcCompat="@drawable/ic_add"
            android:backgroundTint="@color/pastel_primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp" />

        <!-- Logout Icon -->
        <!-- Allows the user to log out, positioned at the top-right corner -->
        <ImageButton
            android:id="@+id/logoutButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/logout"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_logout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>